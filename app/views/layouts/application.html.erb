<!DOCTYPE html>
<html lang="ka">
  <head>
    <title><%= content_for(:title) || "Bait Mate" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Bait Mate">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-white min-h-screen">
    <!-- Navigation -->
    <nav class="bg-blue-600 text-white shadow-lg fixed top-0 left-0 right-0 z-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <%= link_to root_path, class: "text-xl font-bold" do %>
            <%= inline_svg "baitmate-logo.svg", class: "h-14 w-14 fill fill-current stroke-current text-white" %>
        <% end %>

          <!-- Navigation Links -->
          <div class="flex items-center space-x-4">
            <% if logged_in? %>
              <%= link_to t("nav.new_post"), new_post_path, class: "text-sm hover:text-blue-200 hidden md:inline" %>
              <%= link_to profile_path, class: "flex items-center" do %>
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar.variant(resize_to_fill: [32, 32]),
                      class: "w-8 h-8 rounded-full object-cover border-2 border-white" %>
                <% else %>
                  <div class="w-8 h-8 rounded-full bg-blue-400 flex items-center justify-center">
                    <span class="text-sm font-medium"><%= current_user.first_name[0] %></span>
                  </div>
                <% end %>
              <% end %>
              <%= button_to t("nav.logout"), logout_path, method: :delete,
                  class: "text-sm hover:text-blue-200 hidden md:inline", form: { class: "inline" } %>
            <% else %>
              <%= link_to t("nav.login"), new_session_path, class: "text-sm hover:text-blue-200" %>
              <%= link_to t("nav.register"), new_registration_path,
                  class: "bg-white text-blue-600 px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-50" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="fixed top-20 left-4 right-4 z-40 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg shadow-lg">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="fixed top-20 left-4 right-4 z-40 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-lg">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="pt-20 pb-24 md:pb-8 px-4 max-w-7xl mx-auto">
      <%= yield %>
    </main>

    <!-- Mobile Bottom Navigation -->
    <% if logged_in? %>
      <nav class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 md:hidden z-50">
        <div class="flex justify-around items-center h-16">
          <%= link_to root_path, class: "flex flex-col items-center text-gray-600 hover:text-blue-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            <span class="text-xs"><%= t("nav.home") %></span>
          <% end %>
          <%= link_to new_post_path, class: "flex flex-col items-center text-gray-600 hover:text-blue-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <span class="text-xs"><%= t("nav.new_post") %></span>
          <% end %>
          <%= link_to profile_path, class: "flex flex-col items-center text-gray-600 hover:text-blue-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span class="text-xs"><%= t("nav.profile") %></span>
          <% end %>
          <%= button_to logout_path, method: :delete, class: "flex flex-col items-center text-gray-600 hover:text-blue-600", form: { class: "inline" } do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            <span class="text-xs"><%= t("nav.logout") %></span>
          <% end %>
        </div>
      </nav>
    <% end %>
  </body>
</html>
