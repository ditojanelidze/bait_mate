<%= render "components/auth_layout", title: t("verification.title") do %>
  <p class="text-center text-gray-600 mb-2">
    <%= t("verification.description") %>
  </p>

  <p class="text-center text-gray-500 text-sm mb-8">
    <%= t("verification.sent_to") %> <strong><%= @phone_number %></strong>
  </p>

  <%= form_with url: confirm_registration_path, method: :post, class: "space-y-6" do |f| %>
    <%= render "forms/inputs/verification_code", form: f, field: :verification_code, label: t("verification.code_label") %>
    <%= render "forms/buttons/primary", label: t("verification.submit") %>
  <% end %>

  <%= button_to t("verification.resend"), resend_registration_code_path,
      method: :post,
      class: "w-full mt-4 text-blue-600 py-2 text-sm hover:underline text-center" %>
<% end %>
