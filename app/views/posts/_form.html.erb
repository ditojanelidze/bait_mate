<%= render "shared/form_errors", object: post %>

<%= form_with model: post, class: "space-y-6" do |f| %>
  <!-- Image Upload -->
  <div data-controller="image-preview">
    <%= f.label :image, t("posts.image"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-blue-500 transition-colors">
      <% if post.image.attached? %>
        <%= image_tag post.image.variant(resize_to_limit: [400, 400]),
            class: "max-h-48 mx-auto rounded-lg mb-4",
            data: { image_preview_target: "preview" } %>
      <% else %>
        <div data-image-preview-target="placeholder" class="mb-4">
          <svg class="w-12 h-12 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      <% end %>

      <%= f.label :image, class: "cursor-pointer inline-block" do %>
        <span class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-700 transition-colors inline-block">
          <%= post.image.attached? ? t("posts.change_image") : t("posts.image") %>
        </span>
        <%= f.file_field :image, accept: "image/*", class: "hidden",
            data: { image_preview_target: "input", action: "change->image-preview#preview" } %>
      <% end %>
      <p class="text-gray-500 text-xs mt-2"><%= t("posts.image_hint") %></p>
    </div>
  </div>

  <!-- Description -->
  <div>
    <%= f.label :description, t("posts.description"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: t("posts.description_placeholder") %>
  </div>

  <!-- Specie -->
  <div>
    <%= f.label :specie, t("posts.specie"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :specie,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: t("posts.specie_placeholder") %>
  </div>

  <!-- Location -->
  <div>
    <%= f.label :location, t("posts.location"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :location,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: t("posts.location_placeholder") %>
  </div>

  <!-- Rod -->
  <div>
    <%= f.label :rod, t("posts.rod"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :rod,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: t("posts.rod_placeholder") %>
  </div>

  <!-- Bait -->
  <div>
    <%= f.label :bait, t("posts.bait"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :bait,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
        placeholder: t("posts.bait_placeholder") %>
  </div>

  <%= f.submit post.persisted? ? t("posts.update") : t("posts.submit"),
      class: "w-full bg-blue-600 text-white py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors cursor-pointer" %>
<% end %>
