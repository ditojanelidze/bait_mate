<%# locals: (post:, layout: :grid) %>
<% if layout == :grid %>
  <div class="grid grid-cols-2 gap-x-4 gap-y-1 text-sm">
    <div class="flex justify-between py-1">
      <span class="text-gray-500"><%= t("posts.specie") %></span>
      <span class="text-gray-800 font-medium"><%= post.specie %></span>
    </div>
    <div class="flex justify-between py-1">
      <span class="text-gray-500"><%= t("posts.location") %></span>
      <span class="text-gray-800 font-medium"><%= post.location %></span>
    </div>
    <div class="flex justify-between py-1">
      <span class="text-gray-500"><%= t("posts.rod") %></span>
      <span class="text-gray-800 font-medium"><%= post.rod %></span>
    </div>
    <div class="flex justify-between py-1">
      <span class="text-gray-500"><%= t("posts.bait") %></span>
      <span class="text-gray-800 font-medium"><%= post.bait %></span>
    </div>
  </div>
<% else %>
  <div class="divide-y divide-gray-100">
    <div class="flex justify-between py-2">
      <span class="text-gray-500 text-sm"><%= t("posts.specie") %></span>
      <span class="text-gray-800 font-medium"><%= post.specie %></span>
    </div>
    <div class="flex justify-between py-2">
      <span class="text-gray-500 text-sm"><%= t("posts.location") %></span>
      <span class="text-gray-800 font-medium"><%= post.location %></span>
    </div>
    <div class="flex justify-between py-2">
      <span class="text-gray-500 text-sm"><%= t("posts.rod") %></span>
      <span class="text-gray-800 font-medium"><%= post.rod %></span>
    </div>
    <div class="flex justify-between py-2">
      <span class="text-gray-500 text-sm"><%= t("posts.bait") %></span>
      <span class="text-gray-800 font-medium"><%= post.bait %></span>
    </div>
  </div>
<% end %>
